@model FaturaMVC.Models.stok
@{
    ViewBag.Title = "Kaydet";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

<h2>Stok Guncelle</h2>
<form class="form" action="" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">

            @Html.TextBoxFor(m => m.kodu, new { @class = "form-control ", placeholder = "Stok Kodu" })
            @Html.ValidationMessageFor(m => m.kodu)
        </div>
        <div class="form-group col-md-6">

            @Html.TextBoxFor(m => m.adi, new { @class = "form-control ", placeholder = "Stok Adı" })
            @Html.ValidationMessageFor(m => m.adi)
        </div>
        <div class="form-group col-md-6">

            @Html.TextBoxFor(m => m.yabanci_adi, new { @class = "form-control ", placeholder = "Stok Yabancı Adı" })
            @Html.ValidationMessageFor(m => m.yabanci_adi)
        </div>
        <div class="form-group col-md-6">

            @Html.TextBoxFor(m => m.gtip_no, new { @class = "form-control ", type = "tel", placeholder = "GTİP No Giriniz" })
            @Html.ValidationMessageFor(m => m.gtip_no)
        </div>
    </div>
    <button type="submit" class="btn btn-info">Kaydet</button>
    <br />
    @ViewBag.Mesaj
    <p style="color: red; font-size: 15px;">* ile işaretli alanların doldurulması zorunludur</p>
</form>
