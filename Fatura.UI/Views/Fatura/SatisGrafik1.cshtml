@using Chart.Mvc.ComplexChart;
@using Chart.Mvc.Extensions
@{
    ViewBag.Title = "SatisGrafik1";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

<h2>SatisGrafik1</h2>

@{    
    var barChart = new BarChart();
    barChart.ComplexData.Labels.AddRange(new[] { "Ocak", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December" });
    barChart.ComplexData.Datasets.AddRange(new List<ComplexDataset>
             {
                                new ComplexDataset
                                    {
                                        Data = new List<double> { 65, 59, 80, 81, 56, 55, 40 },
                                        Label = "My First dataset",
                                        FillColor = "rgba(220,220,220,0.2)",
                                        StrokeColor = "rgba(220,220,220,1)",
                                        PointColor = "rgba(220,220,220,1)",
                                        PointStrokeColor = "#fff",
                                        PointHighlightFill = "#fff",
                                        PointHighlightStroke = "rgba(220,220,220,1)",
                                    },
                                new ComplexDataset
                                    {
                                        Data = new List<double> { 28, 48, 40, 19, 86, 27, 90 },
                                        Label = "My Second dataset",
                                        FillColor = "rgba(151,187,205,0.2)",
                                        StrokeColor = "rgba(151,187,205,1)",
                                        PointColor = "rgba(151,187,205,1)",
                                        PointStrokeColor = "#fff",
                                        PointHighlightFill = "#fff",
                                        PointHighlightStroke = "rgba(151,187,205,1)",
                                    }
                            });
}
<canvas id="myCanvas" width="800" height="200"></canvas>
@Html.CreateChart("myCanvas", barChart)